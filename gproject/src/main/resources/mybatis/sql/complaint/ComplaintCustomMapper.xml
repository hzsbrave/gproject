      </if>
      <if test="createTime != null" >
        create_time,
      </if>
      <if test="orderDetailId != null" >
        order_detail_id,
      </if>
      <if test="image != null" >
        image,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="complaintId != null" >
